<Window x:Class="MercuryGIS.Title"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MercuryGIS"
        mc:Ignorable="d"
        Title="标题" Height="250" Width="400">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="121" Margin="85,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="289" />
        <Label x:Name="label" Content="标题" HorizontalAlignment="Left" Margin="27,70,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="选择字体与颜色" HorizontalAlignment="Left" Margin="27,183,0,0" VerticalAlignment="Top" Width="90" Click="button_Click"/>
        <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Left" Margin="299,183,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Button x:Name="btnOk" Content="确定" HorizontalAlignment="Left" Margin="194,183,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>

    </Grid>
</Window>
