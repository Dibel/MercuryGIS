<Window x:Class="MercuryGIS.SelectField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MercuryGIS"
        mc:Ignorable="d"
        Title="SelectField" Height="175" Width="382.5">
    <Grid>
        <Label x:Name="label" Content="选择字段" HorizontalAlignment="Left" Margin="40,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="60,60,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="btnOk" Content="确定" HorizontalAlignment="Left" Margin="190,115,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Left" Margin="292,115,0,0" VerticalAlignment="Top" Width="76" Click="btnCancel_Click"/>

    </Grid>
</Window>
